{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@window-splitter/state",
  "sideEffects": false,
  "version": "0.5.2",
  "description": "A state machine for a WAI-ARIA compliant window splitter",
  "homepage": "https://react-window-splitter-six.vercel.app",
  "repository": {
    "url": "https://github.com/hipstersmoothie/react-window-splitter",
    "directory": "packages/state"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Andrew Lisowski",
    "email": "lisowski54@gmail.com"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tshy",
    "dev": "tshy -w",
    "lint": "eslint .",
    "test": "vitest",
    "test:browser": "vitest"
  },
  "license": "MIT",
  "devDependencies": {
    "@internal/eslint-config": "workspace:*",
    "@testing-library/react": "^16.0.0",
    "@types/big.js": "^6.2.2",
    "@vitest/browser": "^2.0.5",
    "@vitest/coverage-istanbul": "^2.0.5",
    "eslint": "^9.9.0",
    "framer-motion": "^11.3.28",
    "jsdom": "^24.1.1",
    "playwright": "^1.46.0",
    "tshy": "^3.0.2",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "@react-spring/rafz": "^9.7.4",
    "big.js": "^6.2.1",
    "tiny-cookie": "^2.5.1",
    "tiny-invariant": "^1.3.3",
    "xstate": "^5.17.4"
  },
  "tshy": {
    "exclude": [
      "src/**/*.test.ts",
      "node_modules"
    ],
    "exports": {
      ".": "./src/index.ts"
    }
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    }
  },
  "main": "./dist/commonjs/index.js",
  "module": "./dist/esm/index.js",
  "keywords": [
    "panel",
    "splitter",
    "resizable",
    "window"
  ],
  "types": "./dist/commonjs/index.d.ts"
}
