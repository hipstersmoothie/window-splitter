{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "react-window-splitter",
  "sideEffects": false,
  "version": "0.6.0",
  "description": "A WAI-ARIA compliant window splitter for React.",
  "homepage": "https://react-window-splitter-six.vercel.app",
  "repository": {
    "url": "https://github.com/hipstersmoothie/react-window-splitter",
    "directory": "packages/react-window-splitter"
  },
  "author": {
    "name": "Andrew Lisowski",
    "email": "lisowski54@gmail.com"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tshy",
    "test": "CI=true vitest",
    "dev": "tshy -w",
    "lint": "eslint .",
    "stats": "rsbuild --mode production build"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  },
  "devDependencies": {
    "@internal/eslint-config": "workspace:*",
    "@rsbuild/core": "^1.3.12",
    "@rsdoctor/rspack-plugin": "^1.0.2",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^20.14.10",
    "@types/react": "^18",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/browser": "^3.1.2",
    "@vitest/coverage-istanbul": "^3.1.2",
    "eslint": "^9.9.0",
    "framer-motion": "^11.3.28",
    "jsdom": "^24.1.1",
    "playwright": "^1.46.0",
    "react": "^18",
    "react-dom": "^18",
    "tshy": "^3.0.2",
    "tiny-cookie": "^2.5.1",
    "typescript": "^5.5.4",
    "vitest": "^3.1.2"
  },
  "dependencies": {
    "@react-aria/interactions": "^3.25.0",
    "@react-aria/utils": "^3.28.2",
    "@window-splitter/state": "workspace:*",
    "reforest": "^0.13.0",
    "tiny-invariant": "^1.3.3"
  },
  "tshy": {
    "exclude": [
      "node_modules",
      "src/**/*.test.ts",
      "**/*stories.*"
    ],
    "exports": {
      ".": "./src/index.tsx"
    }
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    }
  },
  "main": "./dist/commonjs/index.js",
  "types": "./dist/commonjs/index.d.ts",
  "module": "./dist/esm/index.js",
  "keywords": [
    "react",
    "panel",
    "splitter",
    "resizable",
    "window"
  ]
}
