{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@window-splitter/react",
  "sideEffects": false,
  "version": "1.0.2",
  "description": "A WAI-ARIA compliant window splitter for React.",
  "homepage": "https://react-window-splitter-six.vercel.app",
  "repository": {
    "url": "https://github.com/hipstersmoothie/window-splitter",
    "directory": "packages/react"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Andrew Lisowski",
    "email": "lisowski54@gmail.com"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tshy",
    "test": "CI=true vitest",
    "dev": "tshy -w",
    "lint": "eslint .",
    "stats": "rsbuild --mode production build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "clean": "rm -rf dist .turbo .tshy .tshy-build"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.6.1",
    "@internal/eslint-config": "workspace:*",
    "@rsbuild/core": "^1.3.12",
    "@rsdoctor/rspack-plugin": "^1.0.2",
    "@storybook/react": "^8.2.9",
    "@storybook/react-vite": "^8.2.9",
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^20.14.10",
    "@types/react": "^18",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/browser": "catalog:",
    "@vitest/coverage-istanbul": "catalog:",
    "eslint": "catalog:",
    "framer-motion": "^11.3.28",
    "jsdom": "^24.1.1",
    "playwright": "catalog:",
    "react": "^18",
    "react-dom": "^18",
    "storybook": "^8.2.9",
    "tiny-cookie": "^2.5.1",
    "tshy": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "dependencies": {
    "@react-aria/utils": "^3.28.2",
    "@window-splitter/interface": "workspace:*",
    "@window-splitter/state": "workspace:*"
  },
  "tshy": {
    "exclude": [
      "node_modules",
      "src/**/*.test.ts",
      "**/*stories.*"
    ],
    "exports": {
      ".": "./src/index.tsx"
    }
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    }
  },
  "main": "./dist/commonjs/index.js",
  "types": "./dist/commonjs/index.d.ts",
  "module": "./dist/esm/index.js",
  "keywords": [
    "react",
    "panel",
    "splitter",
    "resizable",
    "window"
  ]
}
