{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@window-splitter/svelte",
  "sideEffects": false,
  "version": "0.8.3",
  "description": "A WAI-ARIA compliant window splitter for Svelte.",
  "repository": {
    "url": "https://github.com/hipstersmoothie/window-splitter",
    "directory": "packages/svelte"
  },
  "author": {
    "name": "Andrew Lisowski",
    "email": "lisowski54@gmail.com"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tshy",
    "test": "CI=true vitest",
    "dev": "tshy -w",
    "lint": "eslint .",
    "stats": "rsbuild --mode production build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "clean": "rm -rf dist .turbo .tshy .tshy-build"
  },
  "license": "MIT",
  "devDependencies": {
    "@chromatic-com/storybook": "^1.6.1",
    "@internal/eslint-config": "workspace:*",
    "@rsbuild/core": "^1.3.12",
    "@rsdoctor/rspack-plugin": "^1.0.2",
    "@storybook/addon-svelte-csf": "^4.2.0",
    "@storybook/svelte": "9.0.0-beta.4",
    "@storybook/svelte-vite": "9.0.0-beta.4",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/svelte": "^4.0.0",
    "@types/node": "^20.14.10",
    "@vitest/browser": "^3.1.2",
    "@vitest/coverage-istanbul": "^3.1.2",
    "eslint": "^9.9.0",
    "eslint-plugin-svelte": "^2.35.1",
    "framer-motion": "^11.3.28",
    "jsdom": "^24.1.1",
    "playwright": "^1.46.0",
    "storybook": "9.0.0-beta.4",
    "svelte": "^5.28.2",
    "tiny-cookie": "^2.5.1",
    "tshy": "^3.0.2",
    "typescript": "^5.5.4",
    "vite": "^6.3.3",
    "vitest": "^3.1.2"
  },
  "peerDependencies": {
    "svelte": ">=5.x"
  },
  "dependencies": {
    "@window-splitter/interface": "workspace:*",
    "@window-splitter/state": "workspace:*"
  },
  "tshy": {
    "exclude": [
      "node_modules",
      "src/**/*.test.ts",
      "**/*stories.*"
    ],
    "exports": {
      ".": "./src/index.ts"
    }
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    }
  },
  "module": "./dist/esm/index.js",
  "keywords": [
    "svelte",
    "panel",
    "splitter",
    "resizable",
    "window"
  ]
}
